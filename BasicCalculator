#include <iostream>
using namespace std;

int main() 
{
    float num1;
    float num2;
    char operation;
    cout<<"Enter number one: ";
    cin>>num1;
    cout<<"Enter operation ( + , - , * , / ): ";
    cin>>operation;
    cout<<"Enter number two: ";
    cin>>num2;
    
    if ( operation == '+') {
        cout<<num1+num2;
    } else if ( operation == '-') {
        cout<<num1-num2;
    } else if ( operation == '*') {
        cout<<num1*num2;
    } else if ( operation == '/') {
        cout<<num1/num2;
    } else {
        cout<<"Invalid Operation , Try again ! ";
    }
    
    

    return 0;
}
